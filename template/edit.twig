{% extends "index.twig" %}

{% block header %}
    <div class="header">
        <h2>Edit UserID: {{ user.id }}</h2>
    </div>
{% endblock %}

{% block content %}
    <form class="form" action="" method="post" enctype="multipart/form-data">
        <input class="form__input" type="text" placeholder="name" name="name" value="{{ user.name }}" required autofocus>
        <input class="form__input" type="text" placeholder="age" name="age" required value="{{ user.age }}">
        <input class="form__input" type="email" placeholder="e-mail" name="email" required value="{{ user.email }}">
        <textarea class="form__input" name="desc" rows="5" placeholder="description" required>{{ user.desc }}</textarea>
        <input class="form__input" type="file" name="file">
        <button class="form__btn" type="submit">Save</button>
    </form>
{% endblock %}