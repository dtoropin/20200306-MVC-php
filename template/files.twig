{% extends "index.twig" %}

{% block header %}
    <div class="header">
        <h2>All files</h2>
    </div>
{% endblock %}

{% block content %}
    <div class="files">
        <ul class="files__list">
            {% for file in context %}
                <li class="files__item">
                    <img src="/images/files/{{ file.file_name }}" alt="file" class="files__img">
                    <span>User id: {{ file.user_id }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}